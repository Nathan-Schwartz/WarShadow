{
	"manifest_version":1,
	"type":"WebApp",
	"meta":{
		"name":"WarShadow",
		"version":"1.0.0",
		"minimum-overwolf-version":"0.77.10",
		"author":"Nathan Schwartz",
		"icon":"images/IconMouseOver.png",
		"icon_gray":"images/IconMouseNormal.png",
		"description":"All the Warface features you never knew you needed."
	},
	"permissions": ["Hotkeys","GameInfo", "Logging", "Media", "Microphone", "GameControl", "Extensions", "DesktopStreaming" ],
	"data": {
		"launch_events": [{
			"event": "GameLaunch",
			"event_data": {
				"game_ids": [7784],
			},
		"start_minimized": true
		}],
		"start_window":"MainWindow",
		"windows":{
			"MainWindow":{
				"file":"html/main.html",
				"transparent":true,
				"resizable":true,
				"size":{"width":200, "height":400},
				"min_size":{"width":0,"height":0},
				"show_in_taskbar": true,
				"grab_keyboard_focus": false,
				"ignore_keyboard_events":false,
				"show_minimize": false
			},
			"HSCounter":{
				"file":"html/HSCounter.html",
				"transparent":true,
				"resizable":true,
				"size":{"width":140, "height":50},
				"min_size":{"width":25, "height":25},
				"max_size":{"width":300, "height":500},
				"show_in_taskbar": false,
				"grab_keyboard_focus": false,
				"ignore_keyboard_events":true,
				"show_minimize": false
			},
			"HSPercent":{
				"file":"html/HSPercent.html",
				"transparent":true,
				"resizable":true,
				"size":{"width":140, "height":50},
				"min_size":{"width":25, "height":25},
				"max_size":{"width":300, "height":500},
				"show_in_taskbar": false,
				"grab_keyboard_focus": false,
				"ignore_keyboard_events":true,
				"show_minimize": false
			},
			"SmokeTimer":{
				"file":"html/SmokeTimer.html",
				"transparent":true,
				"resizable":true,
				"size":{"width":100, "height":60},
				"min_size":{"width":25, "height":25},
				"max_size":{"width":300, "height":500},
				"show_in_taskbar": false,
				"grab_keyboard_focus": false,
				"ignore_keyboard_events":true,
				"show_minimize": false
			},
			"StatCrack":{
				"file":"html/StatCrack.html",
				"transparent":false,
				"resizable":true,
				"size": {"width": 1075, "height": 800},
				"start_position": {"Top": 100,"Left": 100},
				"grab_keyboard_focus": true,
				"show_minimize": false
			},
			"HSChains":{
				"file":"html/HSChains.html",
				"transparent":true,
				"resizable":true,
				"size":{"width":140, "height":50},
				"min_size":{"width":25, "height":25},
				"max_size":{"width":300, "height":500},
				"show_in_taskbar": false,
				"grab_keyboard_focus": false,
				"ignore_keyboard_events":true,
				"show_minimize": false
			},
			"Info":{
				"file":"html/Info.html",
				"transparent":false,
				"resizable":true,
				"show_in_taskbar": true,
				"size": {"width": 800, "height": 600},
				"start_position": {"Top": 100,"Left": 300},
				"grab_keyboard_focus": true,
				"show_minimize": false
			},	
			"Settings":{
					"file":"html/settings.html",
					"transparent":false,
					"resizable":false,
					"size":{"width":450, "height":600},
					"grab_keyboard_focus": true,
					"show_minimize": false
			},
			"KDR":{
				"file":"html/KDR.html",
				"transparent":true,
				"resizable":true,
				"size":{"width":140, "height":50},
				"min_size":{"width":25, "height":25},
				"max_size":{"width":300, "height":500},
				"show_in_taskbar": false,
				"grab_keyboard_focus": false,
				"ignore_keyboard_events":true,
				"show_minimize": false
			}
		},
		"hotkeys" : {
			"showHideWindows": {
				"title": "Show/Hide Windows",
				"action-type": "custom",
				"default": "Ctrl+Num 9"
			},
			"showHideMain": {
				"title": "Show/Hide Main Window",
				"action-type": "custom",
				"default": "Ctrl+Num 8"
			},
			"resetCounters": {
				"title": "Reset HUD Counters",
				"action-type": "custom",
				"default": "Ctrl+0"
			},
			"capture": {
				"title": "Capture",
				"action-type": "custom",
				"default": "Ctrl+Num 2"
			},
			 "smokeTimer": {
            "title": "Smoke Timer",
            "action-type": "custom",
            "default": "Num 3"
			}
		},
		
		"plugins": [
			"npIOPlugin.dll"
		]
	}
}